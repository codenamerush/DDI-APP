<% include ./partials/header %>

<body class="background">
    <div class="container-fluid background padding-20">
      <div class="login-container <%= (user ? 'container-fluid' : 'container') %>  padding-20 is-rounded is-white">
          <div class="header clearfix">
            <% include ./partials/navbars/guest %> 
          </div>
          <div class="spacer"></div>
          <div class="row">
            <div class="col-lg-12">
                <% include ./partials/login-handlers/error-handlers %> 
            </div>
          </div>
  
          <div class="container">
                <h2 class="page-header">Account Login</h2>
                <form method="post" action="/users/login">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                </form>
          </div>
          <% include ./partials/footer %>  
        </div>
      </div>
    </div>
      
  </body>